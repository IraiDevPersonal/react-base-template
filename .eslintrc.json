{
  "env": { "browser": true, "es2020": true },
  "extends": [
    "eslint:standard",
    "plugin:@typescript-eslint/standard",
    "plugin:react-hooks/standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react-refresh"],
  "rules": {
    "react-refresh/only-export-components": "warn"
  }
}
